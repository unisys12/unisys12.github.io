---
layout: "layouts/blog.njk"
---

{% for post in collections.blogPosts reversed %}
  <article class="grid">
    <section class="container">
      <hgroup>
        <h2>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <p>{{ post.data.description }}</p>
        <small>{{ post.data.date | formatDate }}</small>
      </hgroup>
      <section class="cloud">
        {% for tag in post.data.tags %}
          <span class="tags">
            <a href="/collections/{{ tag | slugify }}">{{ tag }}</a>
          </span>
        {% endfor %}
      </section>
    </section>
    <img
      src="{{post.data.image}}"
      alt="{{ post.data.image_alt }}"
      style="place-self: center;">
  </article>
{% endfor %}